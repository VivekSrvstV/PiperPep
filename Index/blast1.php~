<script type="text/javascript">
function getseq(t){
document.getElementById('SEQUENCE').value = "";
var myVal;
myVal = document.getElementById('SEQUENCE').value;
myVal += ''+ t;
document.getElementById('SEQUENCE').value = myVal;

}
</script>

